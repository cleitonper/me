{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~src/*": ["./*"],
      "~assets/*": ["assets/*"],
      "~components/*": ["components/*"],
      "~templates/*": ["templates/*"],
      "~layouts/*": ["layouts/*"],
      "~pages/*": ["pages/*"],
      "~hooks/*": ["hooks/*"],
      "~types/*": ["types/*"]
    },
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*",
    "node_modules/@testing-library/jest-dom/extend-expect.d.ts"
  ]
}
